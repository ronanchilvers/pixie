{
    "name": "ronanchilvers/pixie",
    "description": "Pixie - simple web app deployment",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronan Chilvers",
            "email": "ronan@d3r.com"
        }
    ],
    "require": {
        "ddesrosiers/silex-annotation-provider": "^2.0",
        "monolog/monolog": "^1.22",
        "php": "^7.0",
        "silex/silex": "^2.0",
        "symfony/console": "^3.0",
        "symfony/twig-bridge": "^3.2",
        "doctrine/dbal": "^2.5",
        "dflydev/doctrine-orm-service-provider": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "silex/web-profiler": "^2.0",
        "symfony/var-dumper": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Pixie\\": "src/"
        }
    },
    "scripts": {
        "serve": [
            "echo 'Starting development server on http://localhost:9000'",
            "php -S localhost:9000 -t web web/index_dev.php"
        ]
    }
}
